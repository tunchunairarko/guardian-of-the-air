<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mohammodraihanulbash.guardianoftheair.Input2Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[City Name]"
        android:textSize="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/textView31"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/textView32"
        android:layout_below="@+id/textView31"
        android:layout_alignRight="@+id/textView31"
        android:layout_alignEnd="@+id/textView31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T : "
        android:textSize="40dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/textView33"
        android:layout_alignTop="@+id/textView31"
        android:layout_toLeftOf="@+id/textView34"
        android:layout_toStartOf="@+id/textView34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:paddingRight="40dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/textView34"
        android:layout_alignBottom="@+id/textView33"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H :"
        android:textSize="40dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/textView35"
        android:layout_below="@+id/textView31"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingRight="40dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/textView36"
        android:layout_alignTop="@+id/textView35"
        android:layout_toRightOf="@+id/textView35"
        android:layout_toEndOf="@+id/textView35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air pollution level:"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView37"
        android:layout_below="@+id/textView35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_below="@+id/textView37"
        android:layout_alignRight="@+id/textView34"
        android:layout_alignEnd="@+id/textView34"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dust level:"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView38"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:layout_below="@+id/textView38"
        android:layout_alignRight="@+id/textView34"
        android:layout_alignEnd="@+id/textView34"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select airborne disease prominence :"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/textView39"
        android:layout_below="@+id/spinner4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cough"
        android:textSize="20dp"
        android:textStyle="bold"

        android:id="@+id/checkBox"
        android:layout_below="@+id/textView39"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sneezing"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rash"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/checkBox3"
        android:layout_above="@+id/checkBox2"
        android:layout_alignRight="@+id/textView37"
        android:layout_alignEnd="@+id/textView37" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cold"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eye soar"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/checkBox5"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cold Cough"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/checkBox6"
        android:layout_below="@+id/checkBox5"
        android:layout_alignRight="@+id/spinner4"
        android:layout_alignEnd="@+id/spinner4" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cough disease intensity level:"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView40"
        android:layout_below="@+id/checkBox6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:layout_below="@+id/textView40"
        android:layout_alignRight="@+id/textView34"
        android:layout_alignEnd="@+id/textView34"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cold disease intensity level:"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView41"
        android:layout_below="@+id/spinner5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner6"
        android:layout_below="@+id/textView41"
        android:layout_alignRight="@+id/textView34"
        android:layout_alignEnd="@+id/textView34"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contribute"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/button16"
        android:onClick="contribute"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/button17"
        android:onClick="backk"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView41"
        android:layout_alignEnd="@+id/textView41" />


</RelativeLayout>
