<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.mohammodraihanulbash.guardianoftheair.AreaNews">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="0.32">

        <TextView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="Temperature : "
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5" />

        <TextView
            android:layout_width="97dp"
            android:layout_height="46dp"
            android:paddingTop="3dp"
            android:text=" 34 C"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Humidity : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 75% "
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Air Pollution Index : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dust Level : "
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airborne Disease Rate : "
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   75.00 High      "
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView12"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75 %"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/textView13"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignRight="@+id/textView9"
            android:layout_alignEnd="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 %"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView14"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="75dp"
        android:layout_weight="0.59"

        >



    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:paddingBottom="5dp"
            android:src="@drawable/clean_air"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:paddingBottom="5dp"
            android:src="@drawable/mod_clean_air"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:paddingBottom="5dp"
            android:src="@drawable/low_clean_air"
            android:scaleType="centerInside"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4" />
    </RelativeLayout>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="152dp"
            android:layout_height="45dp"
            android:text=" "
            android:id="@+id/button18"
            android:layout_weight="0.03"
            android:background="@drawable/data_break"
            android:layout_alignParentBottom="true"
            android:state_pressed="true"
            android:state_enabled="true"
            android:onClick="areacondition"
            android:layout_gravity="center_horizontal" />





</LinearLayout>
