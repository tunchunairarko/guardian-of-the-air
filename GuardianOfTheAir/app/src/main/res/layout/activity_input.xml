    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="200dp"
        android:layout_weight="0.11">

        <TextView android:text="Help others. Help
yourself. Contribute
to the community
of guardian!
"
            android:paddingLeft="90dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardian - "
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/textView20"
            android:layout_below="@+id/textView22"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="G Name"
            android:id="@+id/textView21"
            android:layout_below="@+id/textView22"
            android:layout_toRightOf="@+id/textView20"
            android:layout_toEndOf="@+id/textView20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Total Points - "
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/textView23"
            android:layout_below="@+id/textView20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="G Point"
            android:id="@+id/textView24"
            android:layout_alignTop="@+id/textView23"
            android:layout_toRightOf="@+id/textView23"
            android:layout_toEndOf="@+id/textView23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="World Ranking - "
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/textView25"
            android:layout_below="@+id/textView23"
            android:layout_toLeftOf="@+id/textView26"
            android:layout_toStartOf="@+id/textView26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="W rank"
            android:id="@+id/textView26"
            android:layout_alignBottom="@+id/textView25"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21" />

    </RelativeLayout>

    <ImageView
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:contentDescription="image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView22"
        android:layout_toEndOf="@+id/textView22"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:text="Select Area"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:id="@+id/textView27" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/spinner2"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="386dp"
        android:layout_height="0dp"
        android:layout_weight="0.36" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Back"
            android:textStyle="bold"
            android:textSize="20dp"
            android:onClick="back"
            android:textColor="#000"
            android:id="@+id/button10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/button11"
            android:layout_alignTop="@+id/button10"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/button12"
            android:onClick="next"
            android:layout_alignTop="@+id/button11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


